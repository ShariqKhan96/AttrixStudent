<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/backgrounddark"
    android:padding="25dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:id="@+id/auth_view"
            >


            <ImageView
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_transparent"
                android:layout_marginBottom="10dp"
                />


            <EditText
                android:id="@+id/name"
                style="@style/darkroundedet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Name"
                />

            <EditText
                android:id="@+id/email"

                style="@style/darkroundedet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Password"
                />

            <EditText
                android:id="@+id/batch_no"
                style="@style/darkroundedet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Batch no"
                />
            <EditText
                android:id="@+id/seat_no"
                style="@style/darkroundedet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Seat No"
                />
            <EditText
                android:id="@+id/shift"
                style="@style/darkroundedet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Shift"
                />
            <EditText
                android:id="@+id/section"
                style="@style/darkroundedet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Section"
                />

            <EditText
                android:id="@+id/program"
                style="@style/darkroundedet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Program"
                />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/login_btn"
                style="@style/roundedbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#177"
                android:text="Register"
                />
        </LinearLayout>
    </ScrollView>



        <LinearLayout

            android:orientation="vertical"
            android:id="@+id/image_picker_view"
            android:layout_width="match_parent"
            android:background="@drawable/ic_camera_alt_black_24dp"
            android:layout_height="250dp"/>




</FrameLayout>