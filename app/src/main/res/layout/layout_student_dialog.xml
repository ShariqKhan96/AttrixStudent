<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0569b82">

            <TextView
                android:id="@+id/tv_seatNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/white"
                android:text="B14101079"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/backgrounddark"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textColor="@color/white"

                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:id="@+id/tv_name"
                    android:textColor="@color/white"

                    android:layout_height="wrap_content"
                    android:text="Saad Abdul Qadir"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile No: "
                    android:textColor="@color/white"

                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:textColor="@color/white"

                    android:id="@+id/tv_mobileNo"
                    android:layout_height="wrap_content"
                    android:text="Abdul Qadir"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class: "
                    android:textColor="@color/white"

                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:textColor="@color/white"

                    android:id="@+id/tv_classId"
                    android:layout_height="wrap_content"
                    android:text="Morning BSCS Sec A"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>


