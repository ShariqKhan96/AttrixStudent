<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv2"
    android:layout_marginEnd="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"

    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        >

        <TextView
            android:id="@+id/cltitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/logocolor"
            android:textColor="@color/white"
            android:text="Physics II"
            android:textAlignment="center"
            android:textSize="50sp"

            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/clteachername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:text="Sir Saad Qadir"

            android:textColor="#555"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cltitle" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/cldetail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:layout_marginBottom="20dp"
            android:text="This class is created by Sir Badar Sami. In this class, Idont know what he will discuss what i know is that i am going to sleep he discusses AI."
            android:textSize="13sp"

            android:textColor="#555"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clteachername" />

        <LinearLayout
            android:padding="10dp"
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp"
            android:background="#efefef"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <android.support.v7.widget.AppCompatImageButton

                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:layout_marginEnd="10dp"
                android:src="@drawable/trash"
                />
            <android.support.v7.widget.AppCompatImageButton
                android:layout_marginEnd="10dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:src="@drawable/like"
                />
            <android.support.v7.widget.AppCompatImageButton

                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:src="@drawable/trash"
                />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>

